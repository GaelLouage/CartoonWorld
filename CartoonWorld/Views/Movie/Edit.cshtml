                                            <label class="form-label" asp-for="@Model.Genre">Genre</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                           <i class="fas fa-film fa-solid fa-lg me-3 fa-fw"></i>
